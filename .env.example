# Bifrost Docs Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Required
# =============================================================================

# Secret key for JWT signing and encryption (must be 32+ characters)
BIFROST_DOCS_SECRET_KEY=your-super-secret-key-must-be-at-least-32-characters

# PostgreSQL password
POSTGRES_PASSWORD=your-postgres-password

# =============================================================================
# Environment
# =============================================================================

# Runtime environment: development, testing, production
BIFROST_DOCS_ENVIRONMENT=development

# Enable debug mode
BIFROST_DOCS_DEBUG=false

# =============================================================================
# Database
# =============================================================================

# Database URLs (override for production)
# BIFROST_DOCS_DATABASE_URL=postgresql+asyncpg://bifrost_docs:password@pgbouncer:5432/bifrost_docs
# BIFROST_DOCS_DATABASE_URL_SYNC=postgresql://bifrost_docs:password@pgbouncer:5432/bifrost_docs

# =============================================================================
# Redis
# =============================================================================

# Redis URL (override for production)
# BIFROST_DOCS_REDIS_URL=redis://redis:6379/0

# =============================================================================
# CORS
# =============================================================================

# Allowed CORS origins (comma-separated)
BIFROST_DOCS_CORS_ORIGINS=http://localhost:8080

# =============================================================================
# JWT Settings
# =============================================================================

# Access token expiration in minutes (default: 30)
BIFROST_DOCS_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration in days (default: 7)
BIFROST_DOCS_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# MFA Settings
# =============================================================================

# Enable MFA requirement for password authentication
BIFROST_DOCS_MFA_ENABLED=true

# TOTP issuer name for authenticator apps
BIFROST_DOCS_MFA_TOTP_ISSUER=BifrostDocs

# =============================================================================
# WebAuthn/Passkeys
# =============================================================================

# WebAuthn Relying Party ID (domain without port)
BIFROST_DOCS_WEBAUTHN_RP_ID=localhost

# WebAuthn Relying Party display name
BIFROST_DOCS_WEBAUTHN_RP_NAME=Bifrost Docs

# WebAuthn expected origin (comma-separated for multiple)
BIFROST_DOCS_WEBAUTHN_ORIGIN=http://localhost:8080

# =============================================================================
# S3/MinIO Storage
# =============================================================================

# MinIO credentials (for local development)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# S3 bucket name
BIFROST_DOCS_S3_BUCKET=bifrost-docs

# =============================================================================
# OpenAI (for vector search)
# =============================================================================

# OpenAI API key (optional - search works without it, just no semantic search)
BIFROST_DOCS_OPENAI_API_KEY=
BIFROST_DOCS_OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# Default Admin User (Optional)
# =============================================================================

# If set, creates this user on startup (useful for development)
# BIFROST_DOCS_DEFAULT_USER_EMAIL=admin@example.com
# BIFROST_DOCS_DEFAULT_USER_PASSWORD=admin123

# =============================================================================
# Debugging (Development Only)
# =============================================================================

# Enable debugpy for VS Code attachment
ENABLE_DEBUG=false
